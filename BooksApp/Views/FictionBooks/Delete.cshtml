@model BooksApp.Domain.Entities.FictionBook

@{
    ViewData["Title"] = "Delete";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Fiction books</a></li>
    <li class="breadcrumb-item active">Delete</li>
</ol>

<h4>Are you sure you want to delete this Fiction Book?</h4>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AgeRestrictions)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AgeRestrictions)
        </dd>
    </dl>
    
    <form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
        <button type="submit" class="btn btn-outline-danger">Delete</button>
        <input type="button" onclick="location.href='@Url.Action("Index")'" value="Cancel" class="btn" />
    </form>
</div>
