@model BooksApp.Domain.Entities.FictionBook

@{
    ViewData["Title"] = "Edit book";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Fiction books</a></li>
    <li class="breadcrumb-item active">Edit</li>
</ol>

<h4>Edit Fiction Book</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
                <input asp-for="Genre" class="form-control" />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AgeRestrictions" class="control-label"></label>
                <input asp-for="AgeRestrictions" class="form-control" />
                <span asp-validation-for="AgeRestrictions" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-success" />
                <input type="button" onclick="location.href='@Url.Action("Index")'" value="Cancel" class="btn" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

