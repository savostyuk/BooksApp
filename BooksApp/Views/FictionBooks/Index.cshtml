@model List<BooksApp.Domain.Entities.FictionBook>

@{
    ViewBag.Title = "Fiction Book Details";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item active">Fiction books</li>
</ol>

<h4 class="text-center my-3">List of Fiction Books</h4>

<table class="table table-hover">
    <thead>
        <tr class="table-primary">
            <th>
                @Html.DisplayNameFor(model => model.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().AgeRestrictions)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var book in Model)
        {
            <tr class="table-secondary">
                <td>
                    <strong>@Html.DisplayFor(modelItem => book.Name)</strong>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => book.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => book.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => book.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => book.AgeRestrictions)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-outline-warning btn-sm">Edit</a> 
                    <a asp-action="Delete" asp-route-id="@book.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Add New Book</a>
</p>